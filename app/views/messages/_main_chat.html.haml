.chat-main
  .chat-main__header
    .chat-main__header__leftbox
      .chat-main__header__leftbox--current-group
        グループ名表示
      .chat-main__header__leftbox--member--list
        .chat-main__header__leftbox--member--list--member
          Member : 
        .chat-main__header__leftbox--member--list--member--name
          nagahama
    .chat-main__header__rightbox
      .chat-main__header__rightbox--btn 
        =link_to 'Edit', '#', class: "chat-main__header__rightbox--btn__Edit-link"
  .chat-main__message-list
    .messages
      = render @messages

  .chat-main__message-form
    = form_for [@group, @message] do |f|
      .chat-main__message-form__edit-box__parent
        = f.text_field :content, class: "chat-main__message-form__edit-box__parent--input-text", placeholder: 'type a message'
        .chat-main__message-form__edit-box__parent__image-att
          = f.label :image, class: "chat-main__message-form__edit-box__parent__image-att--btn" do
            = icon('far', 'image', class: 'icon')
            = f.file_field :image, class: 'chat-main__message-form__edit-box__parent__image-att--input-image'
        
        = f.submit 'Send', class: "chat-main__message-form__edit-box__parent--send-btn"